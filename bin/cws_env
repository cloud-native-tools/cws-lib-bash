#!/bin/bash

ROOT=$(readlink -f $(dirname $(dirname "${BASH_SOURCE[0]}")))

PROFILED=${ROOT}/profile.d
SCRIPTS=${ROOT}/scripts
BIN=${ROOT}/bin

for i in ${PROFILED}/*.sh ${SCRIPTS}/*.sh; do
    if [ -r "$i" ]; then
        if [ "${-#*i}" != "$-" ]; then
            . "$i"
        else
            . "$i" >/dev/null
        fi
    fi
done
unset i

export PATH=${BIN}:${PATH}

