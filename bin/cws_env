#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}")
if [ "${DIR}" == "." ]; then
  DIR=$(pwd)
fi
ROOT=$(readlink -f $(dirname ${DIR}))

PROFILED=${ROOT}/profile.d
SCRIPTS=${ROOT}/scripts

for i in ${PROFILED}/*.sh ${SCRIPTS}/*.sh; do
    if [ -r "$i" ]; then
        if [ "${-#*i}" != "$-" ]; then
            . "$i"
        else
            . "$i" >/dev/null
        fi
    fi
done
unset i

export CWS_BASH_LIB==${ROOT}
export PATH=${CWS_BASH_LIB}/bin:${PATH}

